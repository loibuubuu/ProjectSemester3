@model WebAppClient.Models.Accounts
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/WebLayout.cshtml";
}

<h1>Login Page</h1>
@using (Html.BeginForm())
{
    <div>
        <h3 style="color:red">@ViewBag.Msg</h3>
        <div>
            <input type="text" name="accID" placeholder="Enter Account ID..." />
            <br /> <br />
            <input type="password" name="password" placeholder="Enter Password..." />
            <br /> <br />
            <input type="submit" value="Login" class="btn-success" />
            <input type="reset" value="Reset" class="btn-primary" />
        </div>
    </div>
}